<Page x:Class="Vue.Chargement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vue"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Chargement"
      Style="{DynamicResource Backgroud}">

    <DockPanel>
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center" Content="Veuillez choisir la personne enregistrée comme de cujus" Margin="0, 30" FontSize="30" Style="{DynamicResource FontStyle}"/>
        <StackPanel x:Name="SP_Chargement" Orientation="Vertical" Margin="40"/>
    </DockPanel>
</Page>
